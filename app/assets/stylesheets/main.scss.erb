body {
  margin: 0;
  padding: 0;
  background: url('<%= asset_path("linedpaper.jpg") %>');
}

div {
  box-sizing: border-box;
}

$link-blue: #0000ce;
a,
a:visited {
  text-decoration: none;
  color: $link-blue;
}

.headline {
  margin: 15px auto;
  display: block;
  text-align: center;
  font-size: 2em;
  font-weight: bold;
  color: #000 !important;

  span {
    display: inline-block;
    vertical-align: top;
    line-height: 50px;
  }

  img {
    width: 50px;
  }
}

.container {
  margin: 0 auto;
  width: 80%;
  min-width: 500px;
  max-width: 1000px;
}
